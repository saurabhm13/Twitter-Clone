<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:id="@+id/profile_details_spaces"
    style="@style/SCREEN">

    <ImageView
        android:id="@+id/pd_coverImage_spaces"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@color/p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pd_profileImage_spaces"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/pd_coverImage_spaces"
        app:layout_constraintStart_toStartOf="@+id/pd_coverImage_spaces"
        app:layout_constraintTop_toBottomOf="@+id/pd_coverImage_spaces" />

    <TextView
        android:id="@+id/pd_name_spaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PRIMARYTEXT"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pd_profileImage_spaces"
        app:layout_constraintStart_toStartOf="@+id/pd_profileImage_spaces"
        app:layout_constraintTop_toBottomOf="@+id/pd_profileImage_spaces" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="@+id/pd_name_spaces"
        app:layout_constraintStart_toEndOf="@+id/pd_name_spaces"
        app:layout_constraintTop_toTopOf="@+id/pd_name_spaces"
        app:tint="@color/p1" />

    <TextView
        android:id="@+id/pd_userName_spaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SECONDARYTEXT"
        android:layout_marginTop="10dp"
        android:text="userName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/pd_name_spaces"
        app:layout_constraintTop_toBottomOf="@+id/pd_name_spaces" />

    <TextView
        android:id="@+id/pd_bio_spaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PRIMARYTEXT"
        android:layout_marginTop="10dp"
        android:text="@string/long_text"
        android:textSize="20sp"
        android:maxLines="2"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="@+id/pd_name_spaces"
        app:layout_constraintTop_toBottomOf="@+id/pd_userName_spaces" />

    <Button
        android:id="@+id/pd_follow_spaces"
        android:layout_width="130dp"
        android:layout_height="45dp"
        style="@style/SECONDARYBUTTON"
        android:text="Follow"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>