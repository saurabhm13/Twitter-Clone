<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SCREEN"
    android:paddingTop="10dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/trend_searchFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SECONDARYTEXT"
        android:text="Trend in India"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trendName_searchFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PRIMARYTEXT"
        android:layout_marginTop="6dp"
        android:text="#AppleSaket"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trend_searchFY" />

    <TextView
        android:id="@+id/trendTweets_searchFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SECONDARYTEXT"
        android:layout_marginTop="6dp"
        android:text="1,364 Tweets"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trendName_searchFY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SECONDARYICON"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>