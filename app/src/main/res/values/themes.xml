<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitterClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/p1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurface">@color/primary_black</item>
        <item name="colorOnSurfaceVariant">@color/secondary_black</item>
        <item name="colorOnSurfaceInverse">@color/p1</item>
        
        <item name="android:textColor">@color/primary_black</item>


    </style>

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <style name="PRIMARYTEXT">
        <item name="android:textColor">@color/primary_black</item>
    </style>

    <style name="SECONDARYTEXT">
        <item name="android:textColor">@color/secondary_black</item>
    </style>

    <style name="TERTIARYTEXT">
        <item name="android:textColor">@color/p1</item>
    </style>

    <style name="SECONDARYBUTTON">
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="PRIMARYICONSCOLOR">
        <item name="android:tint">@color/primary_white</item>
    </style>

    <style name="PRIMARYICON">
        <item name="android:tint">@color/secondary_black</item>
    </style>

    <style name="SECONDARYICON">
        <item name="android:tint">@color/secondary_white</item>
    </style>

    <style name="FAB">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/p1</item>
    </style>

</resources>